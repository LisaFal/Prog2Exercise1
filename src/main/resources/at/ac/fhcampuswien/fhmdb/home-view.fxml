<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="331.0" prefWidth="570.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.fhmdb.HomeController">
   <HBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="347.0" spacing="20.0" style="-fx-background-color: black;">
      <padding>
         <Insets bottom="7.0" left="10.0" top="7.0" right="10.0"/>
      </padding>
      <children>
         <Label style="-fx-background-color: F5C518;" text="FHMDb">
            <font>
               <Font name="Calibri Bold" size="24.0" />
            </font>
            <padding>
               <Insets left="2.0" right="2.0" />
            </padding>
         </Label>
         <Label styleClass="text-white" stylesheets="@styles.css" text="Welcome to FHMDb!" />
         <Region HBox.hgrow="ALWAYS"/>
         <JFXButton fx:id="watchlistBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Watchlist" />
      </children>
   </HBox>
   <HBox prefHeight="64.0" prefWidth="570.0" spacing="5.0" styleClass="background-black" stylesheets="@styles.css">
      <children>
         <JFXButton fx:id="sortBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Sort (asc)" />
         <TextField fx:id="searchField" prefHeight="25.0" prefWidth="170.0" promptText="Search FHMDb" />
         <JFXComboBox fx:id="genreComboBox" focusColor="#f5c518" prefHeight="25.0" prefWidth="140.0" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXComboBox fx:id="releaseYearComboBox" focusColor="#f5c518" prefHeight="25.0" prefWidth="140.0" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXComboBox fx:id="ratingComboBox" focusColor="#f5c518" prefHeight="25.0" prefWidth="140.0" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXButton fx:id="searchBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Filter" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="20.0" left="10.0" top="20.0" />
      </padding>
   </HBox>
   <JFXListView fx:id="movieListView" prefHeight="186.0" prefWidth="570.0" style="-fx-background-color: black;" styleClass="background-black" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
   <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="347.0" spacing="20.0" style="-fx-background-color: black;">
      <padding>
         <Insets bottom="7.0" left="10.0" top="7.0" />
      </padding>
      <children>
         <TextField fx:id="searchfieldDirectors" promptText="Search director" />
         <JFXButton fx:id="searchDirectorsBtn" styleClass="background-yellow" stylesheets="@styles.css" text="GO" />
         <Label styleClass="text-white" stylesheets="@styles.css" text="Amount of movies: " />
         <Label fx:id="amountDirectors" prefHeight="17.0" prefWidth="62.0" styleClass="text-white" stylesheets="@styles.css" />
      </children>
   </HBox>
   <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="347.0" spacing="20.0" style="-fx-background-color: black;">
      <padding>
         <Insets bottom="7.0" left="10.0" top="7.0" />
      </padding>
      <children>
         <Label styleClass="text-white" stylesheets="@styles.css" text="Longest movie title: " />
         <Label fx:id="longestMovie" prefHeight="17.0" prefWidth="62.0" styleClass="text-white" stylesheets="@styles.css" />
         <Label layoutX="10.0" layoutY="26.0" styleClass="text-white" stylesheets="@styles.css" text="Most popular actor: " />
         <Label fx:id="popularActor" layoutX="146.0" layoutY="26.0" prefHeight="17.0" prefWidth="62.0" styleClass="text-white" stylesheets="@styles.css" />
      </children></HBox>
</VBox>
